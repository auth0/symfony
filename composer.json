{
  "name": "auth0/jwt-auth-bundle",
  "description": "Support for authenticating users with a JWT in Symfony.",
  "type": "symfony-bundle",
  "keywords": [
    "auth0",
    "authentication",
    "authorization",
    "login",
    "auth",
    "jwt",
    "json web token",
    "jwk",
    "json web key",
    "oauth",
    "openid",
    "secure",
    "protect",
    "api"
  ],
  "homepage": "http://github.com/auth0/jwt-auth-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Auth0",
      "email": "support@auth0.com",
      "homepage": "https://auth0.com/"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-filter": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "auth0/auth0-php": "^7.0",
    "symfony/framework-bundle": "^5.2 || ^6.0"
  },
  "require-dev": {
    "mockery/mockery": "^1.5",
    "nunomaduro/phpinsights": "^2.0",
    "pestphp/pest": "^1.0",
    "phpstan/phpstan": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.0",
    "phpstan/phpstan-symfony": "^1.0",
    "symfony/security-http": "^5.2 || ^6.0",
    "vimeo/psalm": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "Auth0\\JWTAuthBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Auth0\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "tests": [
      "@tests:phpinsights",
      "@tests:phpstan",
      "@tests:psalm",
      "@tests:pest"
    ],
    "tests:phpinsights": [
      "Composer\\Config::disableProcessTimeout",
      "@php ./vendor/bin/phpinsights -v --no-interaction"
    ],
    "tests:phpstan": [
      "Composer\\Config::disableProcessTimeout",
      "@php ./vendor/bin/phpstan analyse --ansi"
    ],
    "tests:psalm": [
      "Composer\\Config::disableProcessTimeout",
      "@php ./vendor/bin/psalm"
    ],
    "tests:pest": [
      "Composer\\Config::disableProcessTimeout",
      "@php ./vendor/bin/pest --stop-on-failure --coverage"
    ],
    "tests:7.4": [
      "Composer\\Config::disableProcessTimeout",
      "docker compose run --rm tests-7.4"
    ],
    "tests:8.0": [
      "Composer\\Config::disableProcessTimeout",
      "docker compose run --rm tests-8.0"
    ],
    "tests:8.1": [
      "Composer\\Config::disableProcessTimeout",
      "docker compose run --rm tests-8.1"
    ]
  }
}
